@model IList<Monolith.Repository.Common.Models.Manager>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    @Html.ActionLink("Create manager", "CreateManager", "Home")
</div>

@if (Model.Count > 0)
{
    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var manager in Model)
        {
            <tr>
                <td>@manager.Id</td>
                <td>@manager.Name</td>
            </tr>
        }
        </tbody>
    </table>
}